{
  "name": "bs_memory_project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest run",
    "build": "tsc -b && vite build",
    "lint": "eslint . --inspect-config",
    "format": "prettier . --write",
    "preview": "vite preview",
    "postinstall": "husky",
    "update-types": "dotenv -- cross-var npx supabase gen types --lang=typescript --project-id %VITE_SUPABASE_PID% --schema public > src/types/database.types.ts",
    "dev:update-types": "dotenv -- cross-var npx supabase gen types --lang=typescript --local > src/types/database.types.ts"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint",
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@react-icons/all-files": "^4.1.0",
    "@supabase/supabase-js": "^2.49.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tanstack/react-query": "^5.67.1",
    "@types/react-textfit": "^1.1.4",
    "@types/swiper": "^6.0.0",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "diff-match-patch": "^1.0.5",
    "html-react-parser": "^5.2.2",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-router-dom": "^7.2.0",
    "react-textfit": "^1.1.1",
    "swiper": "^11.2.5",
    "tailwind-merge": "2.6.0",
    "tailwindcss": "3",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/diff-match-patch": "^1.0.36",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.19.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "msw": "^2.7.3",
    "prettier": "^3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.6"
  }
}
